<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <properties resource='mysql.jdbc.properties'/>

    <settings>
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>

    <environments default="development">
        <environment id="development">
            <transactionManager type='JDBC'/>
            <dataSource type='POOLED'>
                <property name='driver' value='${jdbc.driverClassName}'/>
                <property name='url' value='${jdbc.url}'/>
                <property name='username' value='${jdbc.username}'/>
                <property name='password' value='${jdbc.password}'/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper class="net.thumbtack.hospital.mappers.AdminMapper"/>
        <mapper class="net.thumbtack.hospital.mappers.PatientMapper"/>
        <mapper class="net.thumbtack.hospital.mappers.UserMapper"/>
        <mapper class="net.thumbtack.hospital.mappers.CommonMapper"/>
        <mapper class="net.thumbtack.hospital.mappers.DoctorMapper"/>
        <mapper resource="net/thumbtack/hospital/mappers/DoctorMapper.xml"/>
        <mapper resource="net/thumbtack/hospital/mappers/AdminMapper.xml"/>
        <mapper resource="net/thumbtack/hospital/mappers/PatientMapper.xml"/>
    </mappers>
</configuration>